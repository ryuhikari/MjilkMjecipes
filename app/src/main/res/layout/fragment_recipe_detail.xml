<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:columnCount="2"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        app:srcCompat="@drawable/no_image_available"
        android:id="@+id/imageView_recipe_detail_recipe_picture"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_width="80dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_recipe_detail_recipe_name"
        android:textSize="20sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_recipe_detail_recipe_author"
        android:layout_marginTop="10dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar_recipe_detail_recipe_rating"
        android:layout_marginTop="10dp" />


</LinearLayout>